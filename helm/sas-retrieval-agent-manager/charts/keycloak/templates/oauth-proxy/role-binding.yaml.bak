kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ include "keycloak.oauthProxy.serviceAccountName" . }}
  labels:
    {{- include "keycloak.oauthProxy.labels" . | nindent 4 }}
  {{- with .Values.oauthProxy.serviceAccount.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
subjects:
  - kind: ServiceAccount
    name: {{ include "keycloak.oauthProxy.serviceAccountName" . }}
roleRef:
  kind: Role
  name: {{ include "keycloak.oauthProxy.serviceAccountName" . }}
  apiGroup: rbac.authorization.k8s.io
